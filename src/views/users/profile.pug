extends ../base.pug
include ../mixins/video

block content 
  div.profile__data
    if isHeroku
      img(src=user.avatarUrl).avatar
    else isHeroku 
      img(src="/" + user.avatarUrl).avatar
    h3=user.name
  div.video-grid
    if user.videos 
      each video in user.videos 
        +video(video)
    else 
      span.empty__message No videos found